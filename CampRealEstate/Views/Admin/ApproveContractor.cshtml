@model CampRealEstate.Models.Contractor

@{
    ViewData["Title"] = "ApproveContractor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Contractor Approval Request</h1>

<h4>Do You Approve this contractor to join the Camp Real Estate Network?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApproveContractor">
            @Html.HiddenFor(Model => Model.ContractorId)
            @Html.HiddenFor(Model => Model.FirstName)
            @Html.HiddenFor(Model => Model.LastName)
            @Html.HiddenFor(Model => Model.PhoneNumber)
            @Html.HiddenFor(Model => Model.Email)
            @Html.HiddenFor(Model => Model.LicenseNumber)
            @Html.HiddenFor(Model => Model.DateRegistered)
            @Html.HiddenFor(Model => Model.IsResponsive)
            @Html.HiddenFor(Model => Model.ImageUrl)
            @Html.HiddenFor(Model => Model.IdentityUserId)
            @Html.HiddenFor(Model => Model.CompanyId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
